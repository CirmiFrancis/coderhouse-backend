<div data-aos="fade-down" data-aos-duration="1000"> {{!-- Enviar mail al correo para recuperar contrase√±a --}}
    <h1 class="my-5"> Generar Correo con Token </h1>

    <form class="formulario" action="/api/users/requestPasswordReset" method="POST">
        <label for="email"> Email: </label>
        <input type="text" class="form-input" name="email" id="email" placeholder="Ej: juanperez@gmail.com" required>
        <br><br>
        <button class="form-btn" type="submit"> Enviar correo </button>

