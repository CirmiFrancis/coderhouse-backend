<div class="overflow-y-scroll" data-aos="fade-down" data-aos-duration="1000"> {{!-- Iniciar sesión --}}
    <h1 class="my-5">Iniciar Sesión</h1>

    <form class="formulario" action="/api/users/login" method="POST">
        <label for="email">Email:</label>
        <input type="email" class="form-input" id="email" name="email" placeholder="Ej: juanperez@gmail.com" required>
        
        <label for="password">Contraseña:</label>
        <input type="password" class="form-input" id="password" name="password" placeholder="Ej: ********************" required>
        
        <button type="submit" class="form-btn">Ingresar</button>
        <p class="text-center my-1">¿Olvidaste la contraseña? <a href="/reset-password" class="restablecer-pass">Restablecer Contraseña</a></p>
    </form>
</div>