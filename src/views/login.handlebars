<div class="overflow-y-scroll" data-aos="fade-down" data-aos-duration="1000"> {{!-- Iniciar sesión --}}
    <h1 class="my-5">Iniciar Sesión</h1>

    <form class="formulario mb-5" action="/api/users/login" method="POST">
        <label for="email">Email:</label>
        <input type="email" class="form-input" id="email" name="email" placeholder="Ej: juanperez@gmail.com" required>
        
        <label for="password">Contraseña:</label>
        <input type="password" class="form-input" id="password" name="password" placeholder="Ej: ********************" required>
        
        {{#if error}}
            <p class="text-danger text-center">{{error}}</p>
        {{/if}}

        <button type="submit" class="form-btn">Ingresar</button>
        <p class="text-center my-1">¿Olvidaste la contraseña? <a href="/reset-password" class="restablecer-pass">Restablecer Contraseña</a></p>

        <hr>

        <div class="login-with">
            <div class="login-with-github">
                <img src="/img/svg/github.svg" alt="Ícono de Github">
                <a href="/api/users/github" class="github"> Iniciar con GITHUB </a> 
            </div>
            
            <div class="login-with-google">
                <img src="/img/svg/google.svg" alt="Ícono de Google">
                <a href="/api/users/google" class="google"> Iniciar con GOOGLE </a> 
            </div>
        </div>
    </form>
</div>